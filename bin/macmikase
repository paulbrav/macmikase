#!/usr/bin/env zsh
# macmikase - Main interactive menu entrypoint for macmikase on macOS
# Uses gum for a stylish CLI interface.

emulate -L zsh
set -euo pipefail
setopt no_nomatch

# Find script directory
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Source shared helpers (themes dir discovery, etc.)
# shellcheck source=bin/macmikase-lib.sh
if [[ -f "$SCRIPT_DIR/macmikase-lib.sh" ]]; then
    # shellcheck disable=SC1091
    source "$SCRIPT_DIR/macmikase-lib.sh"
fi

# Check for gum
if ! command -v gum >/dev/null 2>&1; then
    echo "Error: gum is not installed. Please install it with 'brew install gum' or 'make install'."
    exit 1
fi

main_menu() {
    clear
    echo "     ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ïó   ‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïó‚ñà‚ñà‚ïó  ‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó"
    echo "    ‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ñà‚ñà‚ïó ‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë ‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù‚ñà‚ñà‚ïî‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo "    ‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ïî‚ñà‚ñà‚ñà‚ñà‚ïî‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó  "
    echo "    ‚ñà‚ñà‚ïë     ‚ñà‚ñà‚ïë   ‚ñà‚ñà‚ïë‚ïö‚ïê‚ïê‚ïê‚ïê‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ïö‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ñà‚ñà‚ïó ‚ñà‚ñà‚ïî‚ïê‚ïê‚ñà‚ñà‚ïë‚ïö‚ïê‚ïê‚ïê‚ïê‚ñà‚ñà‚ïë‚ñà‚ñà‚ïî‚ïê‚ïê‚ïù  "
    echo "    ‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó‚ïö‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïî‚ïù‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë ‚ïö‚ïê‚ïù ‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïó‚ñà‚ñà‚ïë  ‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïë‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ïó"
    echo "     ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù ‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù‚ïö‚ïê‚ïù     ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïù  ‚ïö‚ïê‚ïù‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo "                          macOS Omakase for Mac                            "
    echo ""

    CHOICE=$(gum choose \
        "üé® Change Theme" \
        "üì¶ Run Full Install" \
        "üê≥ Setup Docker Databases" \
        "üîÑ Update Everything" \
        "ü™õ Cursor Extensions" \
        "‚ùå Exit")

    case "$CHOICE" in
        "üé® Change Theme")
            if command -v theme-tui >/dev/null 2>&1; then
                theme-tui
            elif [[ -f "$SCRIPT_DIR/macmikase-theme" ]]; then
                # Fallback to simple choice if TUI fails
                if command -v find_themes_dir >/dev/null 2>&1; then
                    THEMES_DIR="$(find_themes_dir)"
                else
                    # Last-resort fallback
                    THEMES_DIR="${THEMES_DIR:-$HOME/.local/share/macmikase/themes}"
                fi
                THEME=$(ls -1 "$THEMES_DIR" | sort | gum choose)
                "$SCRIPT_DIR/macmikase-theme" "$THEME"
            fi
            ;;
        "üì¶ Run Full Install")
            "$SCRIPT_DIR/macmikase-install"
            ;;
        "üê≥ Setup Docker Databases")
            "$SCRIPT_DIR/macmikase-databases"
            ;;
        "üîÑ Update Everything")
            "$SCRIPT_DIR/macmikase-update"
            ;;
        "ü™õ Cursor Extensions")
            "$SCRIPT_DIR/macmikase-cursor-extensions"
            ;;
        "‚ùå Exit")
            exit 0
            ;;
    esac
}

# Run menu in a loop unless user exits
while true; do
    main_menu
    echo ""
    echo "Press any key to return to menu..."
    read -r -k 1
done
