{{- /* Theme metadata for reference */ -}}
{{- $cursorJson := joinPath .themes_dir .theme "cursor.json" | include | fromJson -}}
{{- $isLight := false -}}
{{- if hasKey $cursorJson "light" -}}
{{-   $isLight = $cursorJson.light -}}
{{- end -}}
{
  "theme": "{{ .theme }}",
  "colorTheme": "{{ $cursorJson.colorTheme }}",
  "extension": {{ if and (hasKey $cursorJson "extension") $cursorJson.extension }}"{{ $cursorJson.extension }}"{{ else }}null{{ end }},
  "light": {{ if $isLight }}true{{ else }}false{{ end }},
  "colors": {
    "background": "{{ $cursorJson.colors.background }}",
    "foreground": "{{ $cursorJson.colors.foreground }}",
    "accent": "{{ $cursorJson.colors.accent }}",
    "error": "{{ $cursorJson.colors.error }}",
    "warning": "{{ $cursorJson.colors.warning }}"
  }
}
