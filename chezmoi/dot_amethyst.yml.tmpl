# Amethyst configuration
# https://github.com/ianyh/Amethyst
#
# Goal: tiling-window-manager behavior (Pop!/TWM-like):
# - New windows are tiled by default
# - No floating layout in normal cycling
# - Small windows are not auto-floated

mod1:
  - option
  - shift
mod2:
  - option
  - shift
  - control

layouts:
  - tall
  - wide
  - bsp
  - fullscreen

# Tile everything by default
floating: []
floating-is-blacklist: true
float-small-windows: false

# New windows join the tiled stack order (not forced into main pane)
new-windows-to-main: false

# Keep all windows visible/managed
window-max-count: 0

# Pop-like spacing
window-margins: true
smart-window-margins: true
window-margin-size: 8

mouse-follows-focus: false
focus-follows-mouse: false
mouse-swaps-windows: true
mouse-resizes-windows: true
