# ~/.bashrc: executed by bash(1) for non-login shells.
# Managed by chezmoi - edit the template in macmikase/chezmoi/

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# Skip interactive-only config in automated/agent shells (Cursor, CI, etc.)
if [ "$PAGER" = "head -n 10000 | cat" ] || [ "$COMPOSER_NO_INTERACTION" = "1" ]; then
    return
fi

# ============================================================================
# History
# ============================================================================
HISTCONTROL=ignoreboth
shopt -s histappend
HISTSIZE=32768
HISTFILESIZE=32768

# ============================================================================
# Readline Configuration
# ============================================================================
export INPUTRC="$HOME/.inputrc"

# ============================================================================
# Window size and globbing
# ============================================================================
shopt -s checkwinsize
shopt -s globstar 2>/dev/null

# ============================================================================
# Prompt (fallback before starship loads)
# ============================================================================
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# ============================================================================
# Completions (Homebrew)
# ============================================================================
if ! shopt -oq posix; then
  if [ -f /opt/homebrew/etc/profile.d/bash_completion.sh ]; then
    . /opt/homebrew/etc/profile.d/bash_completion.sh
  elif [ -f /usr/local/etc/profile.d/bash_completion.sh ]; then
    . /usr/local/etc/profile.d/bash_completion.sh
  fi
fi

# ============================================================================
# Path additions
# ============================================================================
[[ -d "$HOME/.local/bin" ]] && export PATH="$HOME/.local/bin:$PATH"
[[ -d "$HOME/bin" ]] && export PATH="$HOME/bin:$PATH"

# Homebrew
if [ -x /opt/homebrew/bin/brew ]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [ -x /usr/local/bin/brew ]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi

# Cargo (Rust)
[[ -f "$HOME/.cargo/env" ]] && source "$HOME/.cargo/env"

# Bun
export BUN_INSTALL="$HOME/.bun"
[[ -d "$BUN_INSTALL/bin" ]] && export PATH="$BUN_INSTALL/bin:$PATH"

# NVM (Node Version Manager)
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"

# ============================================================================
# FZF - Fuzzy Finder
# ============================================================================
if command -v fzf >/dev/null 2>&1; then
    # Enable fzf keybindings and completions (Homebrew)
    if command -v brew >/dev/null 2>&1; then
        FZF_BASE="$(brew --prefix)/opt/fzf"
        [[ -f "$FZF_BASE/shell/key-bindings.bash" ]] && source "$FZF_BASE/shell/key-bindings.bash"
        [[ -f "$FZF_BASE/shell/completion.bash" ]] && source "$FZF_BASE/shell/completion.bash"
    fi

    # Use fd if available for better performance
    if command -v fd >/dev/null 2>&1; then
        export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
        export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
        export FZF_ALT_C_COMMAND='fd --type d --hidden --follow --exclude .git'
    fi

    export FZF_DEFAULT_OPTS="--height 40% --layout=reverse --border --info=inline"
fi

# ============================================================================
# Zoxide (smarter cd)
# ============================================================================
if command -v zoxide >/dev/null 2>&1; then
    eval "$(zoxide init bash)"
    # Alias for autojump muscle memory
    alias j='z'
    alias ji='zi'
fi

# ============================================================================
# Direnv (auto-load .envrc files)
# ============================================================================
if command -v direnv >/dev/null 2>&1; then
    eval "$(direnv hook bash)"
fi

# ============================================================================
# Starship prompt
# ============================================================================
if command -v starship >/dev/null 2>&1; then
    eval "$(starship init bash)"
fi

# ============================================================================
# Modern CLI aliases
# ============================================================================
# eza (modern ls, also replaces tree)
if command -v eza >/dev/null 2>&1; then
    alias ls='eza --group-directories-first --icons=auto'
    alias ll='eza -lah --group-directories-first --icons=auto'
    alias la='eza -a --group-directories-first --icons=auto'
    alias lt='eza --tree --level=2 --icons=auto'
    alias tree='eza --tree --icons=auto'
fi

# bat (modern cat)
if command -v bat >/dev/null 2>&1; then
    alias cat='bat --paging=never'
fi

# ripgrep (modern grep)
if command -v rg >/dev/null 2>&1; then
    alias grep='rg'
fi

# fd (modern find)
if command -v fd >/dev/null 2>&1; then
    alias find='fd'
fi

# procs (modern ps) - only if installed via cargo
if command -v procs >/dev/null 2>&1; then
    alias ps='procs'
fi

# duf (modern df)
if command -v duf >/dev/null 2>&1; then
    alias df='duf'
fi

# sd (modern sed)
if command -v sd >/dev/null 2>&1; then
    alias sed='sd'
fi

# yazi file manager (exits to current directory)
if command -v yazi >/dev/null 2>&1; then
    function y() {
        local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
        yazi "$@" --cwd-file="$tmp"
        if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
            cd -- "$cwd"
        fi
        rm -f -- "$tmp"
    }
fi

# ============================================================================
# Quick shortcuts
# ============================================================================
alias l='ls'
alias c='clear'
alias h='history | fzf'

# ============================================================================
# Navigation aliases
# ============================================================================
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'

# ============================================================================
# Safety aliases (ask before overwrite)
# ============================================================================
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# ============================================================================
# Convenience aliases
# ============================================================================
# Create parent directories as needed
alias mkdir='mkdir -pv'

# Human-readable sizes (dust if available, otherwise du -h)
if command -v dust >/dev/null 2>&1; then
    alias du='dust'
else
    alias du='du -h'
fi

# Reload bashrc
alias reload='source ~/.bashrc'

# Get public IP
alias myip='curl -s ifconfig.me'

# Show open ports
alias ports='lsof -i -P -n | grep LISTEN'

# Quick edit configs
alias bashrc='${EDITOR:-nvim} ~/.bashrc'
alias vimrc='${EDITOR:-nvim} ~/.config/nvim/init.lua'

# Clipboard (macOS)
alias clip='pbcopy'
alias paste='pbpaste'

# ============================================================================
# Git shortcuts (lazygit handles most, these are quick one-liners)
# ============================================================================
alias g='git'
alias gs='git status -sb'
alias gd='git diff'
alias gds='git diff --staged'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git pull'
alias glog='git log --oneline --graph --decorate -20'

# ============================================================================
# Docker shortcuts
# ============================================================================
if command -v docker >/dev/null 2>&1; then
    alias d='docker'
    alias dc='docker compose'
    alias dps='docker ps --format "table {{ "{{.Names}}" }}\t{{ "{{.Status}}" }}\t{{ "{{.Ports}}" }}"'
    alias dimg='docker images'
    alias dprune='docker system prune -af'
fi

# ============================================================================
# Python/uv shortcuts
# ============================================================================
alias py='python3'
alias pip='uv pip'
alias venv='uv venv'

# ============================================================================
# Alert for long-running commands (use: sleep 10; alert)
# ============================================================================
alias alert='osascript -e "display notification \"Command finished\" with title \"Terminal\""'

# ============================================================================
# Colored compiler output
# ============================================================================
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# ============================================================================
# Local customizations (not version controlled)
# ============================================================================
# Standard bash aliases file
[[ -f ~/.bash_aliases ]] && source ~/.bash_aliases

# Machine-specific aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Macmikase shell config
[[ -f ~/.config/shell/aliases/macmikase_aliases.sh ]] && source ~/.config/shell/aliases/macmikase_aliases.sh

# Secrets (API keys, tokens, etc.)
[[ -f ~/.config/shell/secrets.sh ]] && source ~/.config/shell/secrets.sh

# Machine-specific bashrc (anything not in the above)
[[ -f ~/.bashrc.local ]] && source ~/.bashrc.local

# Obsidian alias (if installed)
if [[ -d "/Applications/Obsidian.app" ]] || [[ -d "$HOME/Applications/Obsidian.app" ]]; then
    alias obsidian='open -a Obsidian'
fi

# ============================================================================
# Editor
# ============================================================================
export EDITOR="${EDITOR:-nvim}"
export VISUAL="${VISUAL:-nvim}"
