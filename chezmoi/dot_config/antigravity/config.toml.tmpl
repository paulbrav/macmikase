# Antigravity configuration
# Theme colors are dynamically applied via chezmoi template

{{- $cursorJson := joinPath .themes_dir .theme "cursor.json" | include | fromJson }}

[theme]
# Reference the theme file for Antigravity-specific styling
file = "{{ .themes_dir }}/{{ .theme }}/antigravity.conf"

[colors]
# Extracted from theme for easy programmatic access
background = "{{ $cursorJson.colors.background }}"
foreground = "{{ $cursorJson.colors.foreground }}"
accent = "{{ $cursorJson.colors.accent }}"
warning = "{{ $cursorJson.colors.warning }}"
error = "{{ $cursorJson.colors.error }}"
